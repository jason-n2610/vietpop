<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.ppclink.vietpop.activity"
      android:versionCode="1"
      android:versionName="1.0"
      >
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <application
     
    android:label="@string/app_name" android:icon="@drawable/icon_vietpop_2"
    android:theme="@style/CustomTheme">
        <activity android:name=".VietPOPActivity"
                  android:label="VietPOP">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".HotMusicActivity">
		<intent-filter>
                <action android:name="android.intent.action.HotMusic" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryActivity">
		<intent-filter>
                <action android:name="android.intent.action.Category" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".RadioPlayerActivity">
		<intent-filter>
                <action android:name="android.intent.action.RadioPlayer" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MP3PlayerActivity">
		<intent-filter>
                <action android:name="android.intent.action.MP3Player" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".MP3PlayerOtherActivity">
		<intent-filter>
                <action android:name="android.intent.action.MP3PlayerOther" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
       
        <activity android:name=".OtherActivity">
		<intent-filter>
                <action android:name="android.intent.action.Other" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".PlaylistActivity">
		<intent-filter>
                <action android:name="android.intent.action.Playlist" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".RadioActivity">
		<intent-filter>
                <action android:name="android.intent.action.Radio" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.google.ads.AdActivity" 
              	  android:configChanges="keyboard|keyboardHidden|orientation"/>
    </application>
</manifest>