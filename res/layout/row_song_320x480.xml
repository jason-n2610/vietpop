<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="top">
	<TableLayout android:layout_width="match_parent" android:layout_height="50px" android:id="@+id/row_song1_320x480" android:background="#00000000">
		<TableRow android:layout_width="wrap_content" android:id="@+id/row"
			android:layout_height="match_parent" android:background="#00000000">
			<ImageButton android:layout_width="wrap_content" android:id="@+id/icon1" android:layout_gravity="center_vertical"
				android:background="#00000000" android:layout_height="50px" android:layout_marginLeft="6px"></ImageButton>
			<TableLayout android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:id="@+id/content"
				android:background="#00000000" android:layout_marginLeft="8px" android:layout_width="200px">
				<TextView android:id="@+id/text_song" android:layout_height="fill_parent" android:layout_width="fill_parent" android:textColor="#ffffff" android:background="#00000000" android:layout_gravity="top" android:text="TextView" android:singleLine="true" android:textSize="14px"></TextView>
				<TextView android:id="@+id/text_artist" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#dddddd" android:background="#00000000" android:layout_gravity="bottom" android:text="TextView" android:singleLine="true" android:textSize="12px"></TextView>
				<TableRow 
				android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/row_download" android:gravity="center_vertical" android:visibility="visible" android:background="#00000000">
					<ProgressBar style="@android:style/Widget.ProgressBar.Horizontal" android:id="@+id/pbDownload" android:background="#00000000" android:layout_height="9px" android:layout_width="135px"></ProgressBar>
					<TextView android:id="@+id/tvDownload" android:textColor="#ffffffff" android:textSize="9px" android:layout_width="wrap_content" android:background="#00000000" android:layout_height="wrap_content" android:layout_marginLeft="6px"></TextView>
				</TableRow>
			</TableLayout>
			<ImageButton android:id="@+id/icon2"
				android:background="#00000000" android:layout_height="50px" android:layout_gravity="center_vertical|center" android:layout_width="match_parent" android:layout_marginLeft="15px"></ImageButton>
			<ImageButton android:id="@+id/ibCancelDownload" android:visibility="gone"
				android:background="#00000000" android:layout_height="50px" android:src="@drawable/icon_right_cancel_320x480" android:layout_gravity="center_vertical|center" android:layout_width="match_parent" android:layout_marginLeft="15px"></ImageButton>
		</TableRow>
	</TableLayout>

</RelativeLayout>
